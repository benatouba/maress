# Logging
LOG_LEVEL="INFO"
# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# Security
SECRET_KEY=changethis
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=600
ENCRYPTION_KEY=changethis

# Zotero API
ZOTERO_LIBRARY_TYPE=group

# NLP Model (spaCy)
SPACY_MODEL="en_core_sci_lg"

# External APIs
NOMINATIM_USER_AGENT=research-paper-mapper
OPENAI_API_KEY=your-openai-api-key

# Production only
DB_USER=postgres
DB_PASSWORD=secure-password

# Domain
# This would be set to the production domain with an env var on deployment
# used by Traefik to transmit traffic and acquire TLS certificates
DOMAIN=localhost
# To test the local Traefik config
# DOMAIN=localhost.tiangolo.com

# Used by the backend to generate links in emails to the frontend
FRONTEND_HOST=http://localhost:3000
# In staging and production, set this env var to the frontend host, e.g.
# FRONTEND_HOST=https://dashboard.example.com

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME="MaRESS"
STACK_NAME=maress

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:3000,https://localhost,https://localhost:3000"
SECRET_KEY=changethis
FIRST_SUPERUSER=changethis
FIRST_SUPERUSER_PASSWORD=changethis

# Emails
SMTP_HOST=localhost
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@maress.com
SMTP_TLS=False
SMTP_SSL=False
SMTP_PORT=1025

# Postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=changethis
POSTGRES_USER=changethis
POSTGRES_PASSWORD=changethis

SENTRY_DSN=

